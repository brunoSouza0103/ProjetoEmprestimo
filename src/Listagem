# Listar equipamentos emprestados e com quem está;
# Listar equipamentos disponíveis para empréstimo;
# Listar equipamentos em manutenção;
# Listar equipamentos baixados (para jogar fora);

def emprestados(matriz):
    print("\nEquipamentos emprestados e com quem está:")
    for linha in matriz:
        if linha[1] == 'emprestado':                                #Verifica o status para imprimir ou não
            print(f"Equipamento: {linha[4]}, Código: {linha[0]}, Responsável: {linha[2]}")

def disponiveis(matriz):
    print("\nEquipamentos disponíveis para empréstimo:")
    for linha in matriz:
        if linha[1] == 'disponível':
            print(f"Equipamento: {linha[4]}, Código: {linha[0]}")

def manutencao(matriz):
    print("\nEquipamentos em manutenção:")
    for linha in matriz:
        if linha[1] == 'manutenção':
            print(f"Equipamento: {linha[4]}, Código: {linha[0]}")

def baixados(matriz):
    print("\nEquipamentos baixados (para jogar fora):")
    for linha in matriz:
        if linha[3] == 'baixado':                               #Verifica a situação do aparaelho
            print(f"Equipamento: {linha[4]}, Código: {linha[0]}")

def listagem(matriz):                                                   
    print("\n1- Os equipamentos emprestados e com quem está")
    print("2- Os equipamentos disponíveis para empréstimo")
    print("3- Os equipamentos em manutenção")
    print("4- Os equipamentos baixados (para jogar fora)")
    print("\nO que você deseja ver? (Digite o número da opção)")
   
    escolha = int(input())

    if escolha == 1:
        emprestados(matriz)
    elif escolha == 2:
        disponiveis(matriz)
    elif escolha == 3:
        manutencao(matriz)
    elif escolha == 4:
        baixados(matriz)
    else:
        print("Opção inválida. Por favor, digite um número de 1 a 4.")
